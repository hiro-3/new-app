<!DOCTYPE html>
<html>
  <head>
    <title>Which do you recommend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
　　<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <!--header-->
    <header class="page_header">
     <%= link_to users_new_path  do %>
      <span><%= image_tag "cooltext.png", class: "nav-brand" %></span>
     <% end %> 
      <nav>
        <ul class="main-nav ">
          <% if logged_in? %>
            <li><%= link_to '投稿', topics_new_path %></li>
            <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
          <% else %> 
            <li><%= link_to 'ログイン', login_path %></li>
            <li><%= link_to '会員登録', users_new_path %></li>
          <% end %>  
            <li><%= link_to '投稿表示', topics_index_path %></li>
        </ul>
     </nav>
    </header>
      <% flash.each do |key, value| %>
       <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
      <% end %>
　  <%= yield %>
    <script>
     $(function(){
     $(".alert").fadeOut(5000);
       });
    </script>
  </body>
</html> 
 
          
           
  
      
       
         　
     
  