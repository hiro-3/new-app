<div class="topic-index-wrapper">
  <div class="container">
     <% @topics.each do |topic| %>
        <div class="aaaa" >
          <div class="row1"> 
               <div class="col-md-4">
                  <%= image_tag topic.image.url, class:"bbb" %>
                  <%= topic.description %>
                 <div id="favorites_buttons_<%= topic.id %>">
                  <%= render partial: 'favorites/favorite', locals: { topic: topic, favorites: @favorites} %>
                 </div>
                   <%= link_to "変更", edit_topic_path(topic) %>
                   <%= link_to "削除", topics_destroy_path(id: topic.id), method: :delete %>
                   <%= link_to "コメント", new_comment_path(topic_id: topic.id) %>
                  <h3>コメント</h3>
                    <% topic.comments.each do |comment| %>
                     <p><%= comment.description %></p>
                      <% if comment.description.present? %>
                       <%= link_to "変更", edit_comment_path(id: comment.id) %>
                      <% end %>    
                    <% end %> 
              </div>  
          </div>
        </div>        
     <% end %> 
  </div>    
</div> 
          
    
            
                         
          
         
           
            

