div class="topic-index-wrapper">
  <div class="container">
      <div class="row">
        <div class="col-md-4">
           <% @topic.each do |topic| %>
             <div class="topic-index-single">
              <h2 class="topic-author">
                <%= topic.user.name %>
              </h2>
            
                <%= image_tag topic.image.url, :size =>'450x480' %>
                <p class="topic-text">
                 <%= topic.description %>
                </p>
             </div>
           <% end %>  
        </div>
      </div>
    
  </div>
</div>