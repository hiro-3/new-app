<div class="topic-index-wrapper">
  <div class="container">
     <% @topics.each do |topic| %>
        <div class="aaaa" >
          <div class="row1">
            <div class="col-md-12"></div> 
              <div class="col-md-5">
                <div class="sample">  
                 <%= image_tag topic.image.url%><br>
                </div>
                <%= topic.description %><br>
                <h3>投票数</h3><%= Comment.count %>
                <%= link_to new_comment_path(topic_id: topic.id ) do %><br>
                   <%= "コメント" %><br>
                <% end %>
                 <h3>コメント</h3>
                 <% topic.comments.each do |comment| %>
                  <p><%= comment.description %></p>
                 <% end %> 
              </div> 
              <div class="col-md-2">
                <h1>VS</h1>
              </div>    
              <div class="col-md-5">
                <div class="sample">  
                 <%= image_tag topic.image1.url%><br>
                </div> 
                <%= topic.description1 %>
                <h3>投票数</h3><%= Vote.count %>
                <%= link_to new_vote_path(topic_id: topic.id ) do %><br>
                  <%= "コメント" %><br>
                <% end %>
                <h3>コメント</h3>
                 <% topic.votes.each do |vote| %>
                  <p><%= vote.description %></p>
                 <% end %> 
              </div>
            </div>   
          </div>
          <div class="topic-description">
           <%= topic.description2 %>
           <%= link_to "削除", topics_destroy_path(id: topic.id), method: :delete %>
          </div> 
        </div> 
     <% end %> 
  </div>    
</div> 
          
    
            
                         
          
         
           
            

