<div class="topic-index-wrapper">
  <div class="container">
     <% @topics.each do |topic| %>
        <div class="aaaa" >
          <div class="row1"> 
               <div class="col-md-4">
                  <%= image_tag topic.image.url, width: "30%" %>
                  <%= topic.description %>
                 <div class="col-md--4">     
                  <%= link_to "投票", favorites_path(topic_id: topic.id), method: :post %>
                  <%= topic.favorite_users.count %><br>
                  <%= link_to new_comment_path(topic_id: topic.id) do %>
                   <%= "コメント" %><br>
                  <% end %>
                   <%= link_to "変更",edit_topic_path(:id) %>
                   <%= link_to "削除", topics_destroy_path(@topics), method: :delete %>
                 </div> 
               </div> 
          </div>     
          <div class="row2" >
            <h3>コメント</h3>
             <% topic.comments.each do |comment| %>
              <p><%= comment.description %></p>
             <% end %>
          </div>
        </div>        
     <% end %> 
  </div>    
</div> 
          
    
            
                         
          
         
           
            

